<div class="flex flex-col divide-y-2 space-y-4">

<div class="top">
  <div class="section">
    <h2 class="text-xl font-semibold">Upcoming Events</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-4">
      <% @events.upcoming.each do |event| %>
        <div class="card bg-white rounded p-2 flex flex-col space-y-3 shadow-md">
          <header class="card-header text-lg text-gray-600 cursor-pointer border-b-2 border-gray-300 font-medium">
            <%= link_to event.title, event_path(event), class: "card-header-title text-center" %>
          </header>
          <div class="card-content">
            <div class="content text-justify">
              <%= event.description.truncate_words(12) %>
            </div>
          </div>
          <footer class="flex border border-gray-300 space-x-3 justify-between">
            <p class="border-r-2 border-gray-300"><%= event.date.strftime("%A, %B %d, %Y") %></p>
            <p class=""><%= event.location %></p>
          </footer>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="bottom">
  <div class="section">
    <h2 class="text-xl font-semibold">Past Events</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-4">
      <% @events.past.each do |event| %>
        <div class="card bg-white rounded p-2 flex flex-col space-y-3 shadow-md">
          <header class="card-header text-lg text-gray-600 cursor-pointer border-b-2 border-gray-300 font-medium">
            <%= link_to event.title, event_path(event), class: "card-header-title text-center" %>
          </header>
          <div class="card-content">
            <div class="content text-justify">
              <%= event.description.truncate_words(12) %>
            </div>
          </div>
          <footer class="flex border border-gray-300 space-x-3 justify-between">
            <p class="border-r-2 border-gray-300"><%= event.date.strftime("%A, %B %d, %Y") %></p>
            <p class=""><%= event.location %></p>
          </footer>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>