<div class="">
<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">

<%= form_with(model: event, local: true) do |f| %>
<div class="mb-4">
	<%= f.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
	<%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", autofocus: true %>
</div>

<div class="mb-4 space-y-1">
	<%= f.label :date, class: "block text-gray-700 text-sm font-bold mb-2" %>
	<%= f.date_select :date, type: "date", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", autofocus: true %>
</div>

<div class="mb-4">
	<%= f.label :location, class: "block text-gray-700 text-sm font-bold mb-2" %>
	<%= f.text_field :location, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", autofocus: true %>
</div>


<div class="mb-4">
	<%= f.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
	<%= f.text_area :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", autofocus: true %>
</div>


<div class="flex w-full space-x-6">
	<div class="p-3 bg-blue-400 hover:bg-blue-600 cursor-pointer rounded">
		<%= f.submit "Create Event", class: "button text-white" %>
	</div>
	<div class="p-3 bg-red-400 hover:bg-red-600 cursor-pointer rounded">
		<%= link_to "Cancel", root_path, class: "text-white" %>
	</div>
</div>



<% end %>
</div>
</div>